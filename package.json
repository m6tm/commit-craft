{
  "name": "commit-craft",
  "displayName": "Commit Craft",
  "description": "Extension VS Code pour la gestion des commits pro",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "extensionDependencies": [
    "vscode.git"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commit-craft.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "commit-craft.generateMessage",
        "title": "Generate",
        "icon": "$(sparkle)"
      },
      {
        "command": "commit-craft.commit",
        "title": "Commit",
        "icon": "$(check)"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "commit-craft.generateMessage",
          "group": "navigation",
          "icon": "$(sparkle)"
        },
        {
          "command": "commit-craft.commit",
          "group": "navigation",
          "icon": "$(check)"
        }
      ]
    },
    "configuration": {
      "title": "Commit Craft",
      "properties": {
        "commitCraft.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "Clé API OpenAI pour la génération de messages de commit.",
          "scope": "application"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "commit-craft-activitybar",
          "title": "Commit Craft",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "commit-craft-activitybar": [
        {
          "type": "webview",
          "id": "commit-craft.sidebarView",
          "name": "Commit Craft",
          "visibility": "visible"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "openai": "^6.15.0"
  }
}
