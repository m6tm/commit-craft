{
  "name": "commit-craft",
  "displayName": "Commit Craft",
  "description": "Extension VS Code pour la gestion des commits avec une architecture hexagonale",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commit-craft.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "commit-craft.generateMessage",
        "title": "Generate",
        "icon": "$(sparkle)"
      },
      {
        "command": "commit-craft.commit",
        "title": "Commit",
        "icon": "$(check)"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "commit-craft.generateMessage",
          "group": "navigation"
        },
        {
          "command": "commit-craft.commit",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
