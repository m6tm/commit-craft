// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": {
				"base": "$tsc-watch",
				"background": {
					"activeOnStart": true,
					"beginsPattern": "Starting compilation in watch mode",
					"endsPattern": "Found \\d+ errors\\. Watching for file changes\\."
				}
			},
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "build"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
